<?xml version='1.0' encoding='utf-8'?>
<widget id="events.notify.push" version="0.1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Notify.Events</name>
    <description>
        Get notifications from different sources to your device.
    </description>
    <author email="support@notify.events" href="https://notify.events">
        Notify.Events Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="34" />
        <resource-file src="google-services.json" target="app/google-services.json" />
        <icon density="ldpi" src="www/res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/drawable-xxxhdpi-icon.png" />
        <resource-file src="www/res/icon/android/push-drawable-mdpi.png" target="app/src/main/res/drawable-mdpi/push.png" />
        <resource-file src="www/res/icon/android/push-drawable-hdpi.png" target="app/src/main/res/drawable-hdpi/push.png" />
        <resource-file src="www/res/icon/android/push-drawable-xhdpi.png" target="app/src/main/res/drawable-xhdpi/push.png" />
        <resource-file src="www/res/icon/android/push-drawable-xxhdpi.png" target="app/src/main/res/drawable-xxhdpi/push.png" />
        <resource-file src="www/res/icon/android/push-drawable-xxxhdpi.png" target="app/src/main/res/drawable-xxxhdpi/push.png" />
        <allow-intent href="market:*" />
        <hook type="after_prepare" src="hooks/after_prepare/config.js" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
